apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
    name: ui
    namespace: argocd
    labels:
        app.kubernetes.io/name: ui
spec:
    project: default
    source:
        repoURL: "https://github.com/maxiemoses-eu/CloudOpsHub-agroCD"
        targetRevision: main
        path: charts/ui
    destination:
        server: "https://kubernetes.default.svc"
        namespace: ui
    syncPolicy:
        automated:
            prune: true
            selfHeal: true
        retry:
            limit: 5
            backoff:
                duration: 5s
                factor: 2
                maxDuration: 3m
        syncOptions:
            - CreateNamespace=true